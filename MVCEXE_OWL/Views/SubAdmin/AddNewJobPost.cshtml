@{
    ViewBag.Title = "AddNewJobPost";
    Layout = "~/Views/Shared/SubAdminLayoutView.cshtml";
}

@Html.Partial("_AdminBreadcrumbsPartialView")
<section class="section">
    <div class="row">
        <div class="col-lg-12"> 
            @using (Html.BeginForm("AddNewJobPost", "SubAdmin", FormMethod.Post, new{  }))
            {
    <!--<form action="/SubAdmin/AddNewJobPost" method="post">-->
    <div class="row">
        <div class="col-lg-9">
            <div class="card">
                <div class="card-body">
                    <div id='pmsg' class='alert alert-info alert-dismissible fade show' role='alert'>@ViewBag.Message<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button></div>
                    <h5 class="card-title">Job Post </h5>
                    <label class="card-title"> Job Title  </label>
                    <input type="text" placeholder="Enter_Title_Here_In_Short" name="JobTitle" id="JobTitle" class="form-control" />
                    <label class="card-title">KeySkills </label>
                    <input type="text" placeholder="Speration between by ( | ) Here" name="KeySkills" id="KeySkills" class="form-control" />
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="card">
                                <div class="card-body">
                                    <label class="card-title">Experience</label>
                                    <input type="number" name="Exp_InYears" id="Exp_InYears" class="form-control" placeholder="Number of Year" />
                                    <label class="card-title">Qualification</label>
                                    @Html.DropDownList("Qualification", null, "--Need_Qualification--", new { @class = "form-select" })
                                    <label class="card-title">JobType</label>
                                    @Html.DropDownList("JobType", null, "--JobType--", new { @class = "form-select" })
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="card">
                                <div class="card-body">
                                    <label class="card-title">Job Location</label>
                                    @Html.DropDownList("JobLocation", null, "--JobLocation--", new { @class = "form-select" })
                                    <label class="card-title">Available Post</label>
                                    <input type="number" name="Available_NoOfPost" id="Available_NoOfPost" class="form-control" placeholder="Number of Post" />
                                    <label class="card-title">JobMode</label>
                                    @Html.DropDownList("JobMode", null, "--JobMode--", new { @class = "form-select" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card">
                <div class="card-body">
                    <span class="form-control text-center border-0">
                        <button class="btn btn-primary rounded-pill" type="submit">Add</button>
                        <button class="btn btn-danger  rounded-pill" type="reset">Reset</button>
                    </span>
                    <label class="card-title">Status  </label>
                    @Html.DropDownList("PostStatus", null, "--MarkStatus--", new { @class = "form-select", id = "Status" })
                    <label class="card-title">Publish By </label>
                    @Html.DropDownList("PostAuthor", null, "--Select Publisher--", new { @class = "form-select", id = "PublishedBy" })
                </div>
            </div>
        </div>
    </div>
  
               /**--</form>--**/
            } 
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        /* Message formatting Start */
        if ('@ViewBag.Message' != '') {
            var msg = ViewBag.Message;
            var x = msg.indexOf('Success');
            if (x >= 0) {
                //start: to clear controls
                $("#JobTitle").val("");
                $("#KeySkills").val("");
                $("#Exp_InYears").val("");
                $("#Qualification").val("");
                $("#JobType").val("");
                $("#JobLocation").val("");
                $("#Available_NoOfPost").val("");
                $("#JobMode").val("");
            }
            setInterval(function () {
                $("#pmsg").fadeOut(2000);
            }, 5000);
        }
        /* Message Formatting End */
    });
</script>
